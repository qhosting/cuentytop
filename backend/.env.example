# =====================================================
# SISTEMA DE GESTIÓN DE SUSCRIPCIONES - CONFIGURACIÓN
# Archivo de Variables de Entorno
# =====================================================

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=suscripciones_db
DB_USER=postgres
DB_PASSWORD=postgres

# URL completa para conexión (opcional)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/suscripciones_db

# =====================================================
# CONFIGURACIÓN JWT
# =====================================================
JWT_SECRET=tu_jwt_secret_muy_seguro_y_complicado_aqui
JWT_EXPIRES_IN=7d

# =====================================================
# CONFIGURACIÓN SMS/WHATSAPP
# =====================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=tu_account_sid_aqui
TWILIO_AUTH_TOKEN=tu_auth_token_aqui
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (alternativa)
WHATSAPP_API_TOKEN=tu_whatsapp_token_aqui
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id

# =====================================================
# CONFIGURACIÓN DE ADMINISTRADOR
# =====================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password_admin_super_seguro_123
ADMIN_EMAIL=admin@sistema.com

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000/api

# =====================================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# =====================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# Email Templates
FROM_EMAIL=sistema@suscripciones.com
FROM_NAME=Sistema de Suscripciones

# =====================================================
# CONFIGURACIÓN DE PAGOS
# =====================================================

# Instrucciones de Pago
BANCO_NOMBRE=BBVA Bancomer
BANCO_TITULAR=TU EMPRESA S.A. DE C.V.
BANCO_CLABE=012345678901234567
BANCO_CUENTA=0123456789

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================

# Upload Directory
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# =====================================================
# CONFIGURACIÓN DE CACHE
# =====================================================

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache TTL (en segundos)
CACHE_TTL=3600

# =====================================================
# CONFIGURACIÓN DE WEBHOOKS
# =====================================================

# Webhook URLs
PAYMENT_WEBHOOK_URL=https://tu-dominio.com/webhooks/payment
ORDER_WEBHOOK_URL=https://tu-dominio.com/webhooks/order

# =====================================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================================

# Debug
DEBUG=app:*

# Mock Services
MOCK_SMS=true
MOCK_EMAIL=true

# Show sensitive data in logs (solo development)
SHOW_SENSITIVE_DATA=false

# =====================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =====================================================

# SSL/TLS
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancer
TRUST_PROXY=true

# =====================================================
# CONFIGURACIÓN DE MONITOREO
# =====================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/project

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=tu_new_relic_key

# =====================================================
# CONFIGURACIÓN DE BACKUP
# =====================================================

# Backup Database
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=suscripciones-backups
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1

# =====================================================
# CONFIGURACIÓN DE APIs EXTERNAS
# =====================================================

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Facebook Pixel
FB_PIXEL_ID=123456789

# =====================================================
# NOTAS IMPORTANTES
# =====================================================

# 1. NUNCA subas este archivo a un repositorio público
# 2. Cambia todas las contraseñas por defecto
# 3. Usa valores reales en producción
# 4. Considera usar servicios como Docker Secrets o AWS Parameter Store
# 5. Mantén este archivo sincronizado con tu documentación de deployment

# =====================================================
# EJEMPLO DE USO
# =====================================================

# Desarrollo:
# NODE_ENV=development
# JWT_SECRET=dev_secret_key
# MOCK_SMS=true

# Producción:
# NODE_ENV=production
# JWT_SECRET=production_super_secret_key
# MOCK_SMS=false