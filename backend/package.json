{
  "name": "sistema-suscripciones-backend",
  "version": "2.0.0",
  "description": "Sistema completo de gestiÃ³n de suscripciones para servicios de streaming",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "cleanup": "node scripts/cleanup.js",
    "db:create": "createdb suscripciones_db",
    "db:drop": "dropdb suscripciones_db",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "docker:build": "docker build -t sistema-suscripciones .",
    "docker:run": "docker run -p 3000:3000 sistema-suscripciones",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "suscripciones",
    "streaming",
    "netflix",
    "disney",
    "hbo",
    "spotify",
    "api",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "twilio": "^4.19.3",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.2",
    "redis": "^4.6.11",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3",
    "web-push": "^3.6.6",
    "csv-parser": "^3.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-slow-down": "^1.6.0",
    "xss": "^1.0.14",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pm2": "^5.3.0",
    "cross-env": "^7.0.3",
    "faker": "^5.5.3",
    "mock-sms": "^2.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "uploads/*",
      "backups/*"
    ],
    "delay": 1000
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/logs/**",
      "!**/uploads/**",
      "!**/backups/**",
      "!server.js",
      "!config/database.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-suscripciones.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sistema-suscripciones/issues"
  },
  "homepage": "https://github.com/tu-usuario/sistema-suscripciones#readme"
}